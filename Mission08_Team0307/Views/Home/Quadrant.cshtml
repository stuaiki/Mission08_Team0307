@model List<TaskEntry>

<div class="container" style="margin-top:150px; margin-bottom:100px;">
    <div class="table-responsive">
        <table class="table align-items-center mb-0">
            <tr>
                <th class="text-uppercase text-secondary text-sm font-weight-bolder opacity-7" style="background-color: #dee2e6; text-align: center;">Quadrant 1</th>
                <th class="text-uppercase text-secondary text-sm font-weight-bolder opacity-7" style="background-color: #dee2e6; text-align: center;">Quadrant 2</th>
            </tr>

            <tr>
                <td>
                    <div style="height:5px;font-size:1px;">&nbsp;</div>
                    @foreach (var incompleteTask in Model)
                    {
                        @if (incompleteTask.Quadrant == "Quadrant I")
                        {
                            <div class="d-flex px-2 py-1" style="justify-content: center">
                                <p style="margin-top:2px;">@incompleteTask.Task</p>
                                <p>&nbsp;</p>
                                <a class="btn bg-gradient-info btn-sm text-xxs" style="width:50px; text-align:left; padding-left: 5px;" asp-controller="Home" asp-action="Update" asp-route-id="@incompleteTask.TaskId">Update</a>
                                <p>&nbsp;</p>
                                <a class="btn bg-gradient-danger btn-sm text-xxs" style="width:50px; text-align:left; padding-left: 8px;" asp-controller="Home" asp-action="Delete" asp-route-id="@incompleteTask.TaskId">Delete</a>
                                <br />
                            </div>
                        }
                    }
                </td>

                <td>
                    <div style="height:5px;font-size:1px;">&nbsp;</div>
                    @foreach (var incompleteTask in Model)
                    {
