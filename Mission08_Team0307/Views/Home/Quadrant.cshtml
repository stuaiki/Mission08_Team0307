                                <a class="btn bg-gradient-danger btn-sm text-xxs" style="width:50px; text-align:left; padding-left: 8px;" asp-controller="Home" asp-action="Delete" asp-route-id="@incompleteTask.TaskId">Delete</a>
                                <br />
                            </div>
                        }
                    }
                </td>
            </tr>

            <tr>
                <th class="text-uppercase text-secondary text-sm font-weight-bolder opacity-7" style="background-color: #dee2e6; text-align: center;">Quadrant 3</th>
                <th class="text-uppercase text-secondary text-sm font-weight-bolder opacity-7" style="background-color: #dee2e6; text-align: center;">Quadrant 4</th>
            </tr>
